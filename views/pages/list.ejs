<html>

<%- include('../includes/head') %>

<body>
  <script src="//code.jquery.com/jquery-1.12.3.js"></script> 
  <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script> 
  <script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js "></script>

  <script>
    $(document).ready(function() {
      $('#exercise').DataTable();
    } );
  </script>

  <div>
    <div class="container">
      <div style="text-align: center;">
        <div class="col-lg-12 jumbotron">
          <h2> Exercise List </h2>
          <h4>Total <%= e.content.length %> Documents</h4>
          <div class="table-responsive">
              <table id="exercise" class="table table-bordered table-hover table-striped">
                  <thead>
                      <tr>
                          <th>type</th>
                          <th>group</th>
                          <th>name</th>
                          <th>link</th>
                          <th>level</th>
                      </tr>
                  </thead>
                  <tbody>
                         <% for(var i=0; i<e.content.length; i++) { %>
                          <tr>
                              <td><%= e.content[i].type %></td>
                              <td><%= e.content[i].group %></td>
                              <td><%= e.content[i].name %></td>
                              <td><a target="_blank" href=<%= e.content[i].link %>><%= e.content[i].link %></td>
                              <td><%= e.content[i].level %></td>
                          </tr>
                          <% } %>                                 
                  </tbody>
              </table>
          </div>
      </div>
      
      </div>
      
    </div>
  </div>
  <%- include('../includes/footer') %>
</body>

</html>